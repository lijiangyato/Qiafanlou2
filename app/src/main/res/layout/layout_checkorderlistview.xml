<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/orderlist_orderID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:text="订单信息"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_12" />

        <Button
            android:id="@+id/orderlist_orderCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right|center"
            android:paddingRight="15dp"
            android:text="取消订单"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_12"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/orderlist_orderDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/delete"
            android:visibility="visible" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        layout="@layout/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/orderlist_goodsamage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/orderlist_ordermsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="订单信息"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_12" />

            <TextView
                android:id="@+id/orderlist_orderNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:text="订单数量"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/txt_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderlist_goodsState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#fff"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="订单状态"
            android:textColor="@android:color/black"
            android:textSize="@dimen/txt_12" />
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        layout="@layout/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/orderlist_orderTotalMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:background="#fff"
            android:gravity="left|center"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:text="订单金额"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_12" />

        <Button
            android:id="@+id/orderlist_gopay"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#CD0000"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/goCheck"
            android:textColor="#ffffff"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>