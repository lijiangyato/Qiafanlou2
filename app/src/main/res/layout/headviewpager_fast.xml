<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mMainPageViewPagerFL"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <com.ings.gogo.view.AutoScrollViewPager
            android:id="@+id/mMainPageViewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/mMainPageCicleInVPLL"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_gravity="center|bottom"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/regist_topLL"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/alltop_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:clickable="true"
            android:padding="15dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/alltop_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textSize="@dimen/txt_14"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>