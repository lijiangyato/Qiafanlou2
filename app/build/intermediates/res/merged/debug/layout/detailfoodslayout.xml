<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gildbg"
    android:orientation="vertical" >

    <include
        android:id="@+id/detailfoodinclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/detailtophead" />

    <include
        android:id="@+id/mPersonDivider1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailfoodinclude"
        layout="@layout/divider_line" />

    <com.ings.gogo.view.MySnapPageLayout
        android:id="@+id/flipLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/detailbottominclude"
        android:layout_below="@+id/mPersonDivider1" />

    <include
        android:id="@+id/detailbottominclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/detailbottomlayout" />

</RelativeLayout>