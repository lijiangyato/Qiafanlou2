<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/update_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_height"
        android:gravity="center"
        android:textSize="@dimen/txt_16"
        android:textStyle="bold" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/divider_line" />

    <ListView
        android:id="@+id/update_tipslv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#00000000" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        layout="@layout/divider_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/update_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/update_wait" />

        <Button
            android:id="@+id/update_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/app_update_confirm"
            android:textColor="#EA0000" />
    </LinearLayout>

</LinearLayout>