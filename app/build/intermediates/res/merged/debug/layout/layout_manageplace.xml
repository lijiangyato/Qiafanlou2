<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/placeManage_topRe"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@android:color/transparent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/placeManage_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="48dp"
            android:text="@string/myplace"
            android:textColor="#1a1a1a"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/placeManage_placeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/placeManage_addPlace"
        android:layout_below="@+id/placeManage_topRe" >
    </ListView>

    <TextView
        android:id="@+id/placeManage_addPlace"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_height"
        android:layout_alignParentBottom="true"
        android:background="#FFFAFA"
        android:drawableLeft="@drawable/addplace_32"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/btn_right_32"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/createplace"
        android:textSize="@dimen/txt_14" />

</RelativeLayout>